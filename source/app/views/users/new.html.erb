<p> Sign Up! </p>

<%= flash[:notice] %>
<%= form_for :user,  url: {action: "create"} do |f| %>

    <%= f.label :name, "Name" %><br />
    <%= f.text_field :name, placeholder: "Ben Brostoff" %><br>


    <%= f.label :email, "Email" %><br />
    <%= f.text_field :email, placeholder: "ben.brostoff@gmail.com" %><br>

    <%= f.label :password %><br />
    <%= f.password_field :password, placeholder: "Password"  %><br>

    <%= f.label :password_confirmation, "Password Confirmation" %><br />
    <%= f.password_field :password_confirmation, placeholder: "Confirm Password"  %><br>

    <div class="text-center">
      <%= f.submit "Sign Me Up!"%>
    </div>

  <% end %>
